import java.util.Arrays;

public class MergeWithoutExtraSpace {
    public static void merge(int[] arr1, int[] arr2, int m, int n) {
        int total = m + n;
        int gap = (int) Math.ceil((double) total / 2);

        while (gap > 0) {
            int i = 0, j = gap;

            while (j < total) {
                // Case 1: both in arr1
                if (i < m && j < m) {
                    if (arr1[i] > arr1[j]) {
                        int temp = arr1[i];
                        arr1[i] = arr1[j];
                        arr1[j] = temp;
                    }
                }
                // Case 2: one in arr1, one in arr2
                else if (i < m && j >= m) {
                    if (arr1[i] > arr2[j - m]) {
                        int temp = arr1[i];
                        arr1[i] = arr2[j - m];
                        arr2[j - m] = temp;
                    }
                }
                // Case 3: both in arr2
                else {
                    if (arr2[i - m] > arr2[j - m]) {
                        int temp = arr2[i - m];
                        arr2[i - m] = arr2[j - m];
                        arr2[j - m] = temp;
                    }
                }
                i++;
                j++;
            }

            if (gap == 1) break; // last pass
            gap = (int) Math.ceil((double) gap / 2);
        }
    }

    public static void main(String[] args) {
        int[] arr1 = {1, 3, 5, 7};
        int[] arr2 = {2, 4, 6, 8};
        merge(arr1, arr2, arr1.length, arr2.length);

        System.out.println("arr1 = " + Arrays.toString(arr1));
        System.out.println("arr2 = " + Arrays.toString(arr2));
    }
}
